package estructura;

public class Triangulo {
    int base;
    int altura;
    int area;

    public Triangulo() {
        base = 0;
        altura = 0;
    }

    public Triangulo(int base, int altura) {
        this.base = base;
        this.altura = altura;
    }

    void setArea() {
        area = (base * altura) / 2;
    }

    void showArea() {
        System.out.println("El area del triangulo es: " + area);
    }
}
